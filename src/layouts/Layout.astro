---
import BaseHead from '@/components/BaseHead.astro';
import { Image } from 'astro:assets';
import logo_white from '@/assets/images/logo-white.png';
import Button from '@/components/Button.astro';
import logoGreen from '@/assets/images/logo-green-2x.png';
import Navigation from '@/components/Navigation.astro';

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} />
  </head>
  <body>
    <Navigation />
    <header id="header">
      <div class="logo-box">
        <a href="/">
          <Image src={logo_white} alt="logo" loading="eager" />
        </a>
      </div>
      <div class="text-box">
        <h1>
          <span>OUTDOORS</span>
          <span>IS WHERE LIFE HAPPENS</span>
        </h1>
        <Button href="#" class="btn btn--white btn--animated"
          >DISCOVER OUR TOURS</Button
        >
      </div>
    </header>

    <slot />

    <footer>
      <div class="logo">
        <Image src={logoGreen} alt="full logo" />
      </div>
      <div class="px-xs footer-content">
        <nav>
          <ul>
            <li><a href="#">COMPANY</a></li>
            <li><a href="#">CONTACT US</a></li>
            <li><a href="#">CAREERS</a></li>
            <li><a href="#">PRIVACY POLICY</a></li>
            <li><a href="#">TERMS</a></li>
          </ul>
        </nav>
        <p class="copy">
          Made by unibox in {new Date().getFullYear()} following the course of Jonas
          Schmedtmann.
        </p>
      </div>
    </footer>
    <script src="@/lib/app.ts"></script>
  </body>
</html>
