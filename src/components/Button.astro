---
const { href, type = 'link', class: classname } = Astro.props;
---

{
  type === 'button' && (
    <button class:list={[classname]}>
      <slot />
    </button>
  )
}
{
  type === 'link' && (
    <a href={href} class:list={[classname]}>
      <slot />
    </a>
  )
}

<style>
  .btn {
    display: inline-block;
    position: relative;
    transition: 0.2s;
    border-radius: 5rem;
    padding: 1rem 2rem;
    &.btn--white {
      background-color: var(--color-white);
      color: var(--color-gray-dark);
      &::after {
        background-color: var(--color-white);
      }
    }
    &.btn--green {
      background-color: var(--color-primary);
      color: var(--color-white);
      &::after {
        background-color: var(--color-primary);
      }
    }
    &.btn--animated {
      animation: moveInBottom 0.5s ease-out 0.75s;
      animation-fill-mode: backwards;
    }
    &::after {
      display: inline-block;
      position: absolute;
      top: 0;
      left: 0;
      z-index: -1;
      transition: all 0.4s;
      border-radius: 5rem;
      width: 100%;
      height: 100%;
      content: '';
    }
    &:hover {
      transform: translateY(-3px);
      box-shadow: 0 0.5rem 1rem lch(from var(--color-black) l c h / 0.2);
      &::after {
        transform: scaleX(1.4) scaleY(1.6);
        opacity: 0;
      }
    }
    &:active {
      transform: translateY(-1px);
      box-shadow: 0 0.25rem 0.5rem lch(from var(--color-black) l c h / 0.2);
    }
  }
  .btn-text {
    &:link,
    &:visited {
      display: inline-block;
      transition: all 0.2s;
      border-bottom: 1px solid var(--color-primary);
      padding: 3px;
      color: var(--color-primary);
      font-size: 1rem;
    }
    &:hover {
      transform: translateY(-2px);
      box-shadow: 0 1rem 2rem lch(from var(--color-black) l c h / 0.15);
      background-color: var(--color-primary);
      color: var(--color-white);
    }
    &:active {
      transform: translateY(0);
      box-shadow: 0 0.5rem 1rem lch(from var(--color-black) l c h / 0.15);
    }
  }
</style>
